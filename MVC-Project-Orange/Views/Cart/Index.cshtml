@model List<CartItem>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- Breadcrumb Section Begin -->
<section class="breadcrumb-option">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb__text">
                    <h4>Shopping Cart</h4>
                    <div class="breadcrumb__links">
                        <a href="/Home/Index">Home</a>
                        <a href="/Home/Shoping_Cart">Shop</a>
                        <span>Shopping Cart</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Section End -->
<!-- Shopping Cart Section Begin -->
<section class="shopping-cart spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="shopping__cart__table">
                    <table>
                        <thead>
                            <tr>
                                <th>Product</th>
                                <th>Quantity</th>
                                <th>Total</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="product__cart__item">
                                        <div class="product__cart__item__pic">
                                            <img src="@Url.Content("~/Images/"+item.ImgUrl)" width="100" height="100" alt="">
                                        </div>
                                        <div class="product__cart__item__text">
                                            <h6>@item.ProductName</h6>
                                            <h5 id="prc">$@item.Price.ToString("F2")</h5>
                                        </div>
                                    </td>
                                    <td class="quantity__item">
                                        <div class="quantity">
                                            <div class="pro-qty-2">
                                                <input class="qty" type="number" min="1" value="1" onchange="Calc()">
                                            </div>
                                        </div>
                                    </td>
                                    <td class="prc" hidden> @item.Price.ToString("F2") </td> <!-- Ensure this is present if using 'prc' class -->
                                    <td class="cart__price"></td>

                                    <td class="cart__close">
                                        <a href="@Url.Action("RemoveFromCart", "Cart", new { productId = item.ProductId })">
                                            <i class="fa fa-close"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="row">
                    <div class="col-lg-6 col-md-6 col-sm-6">
                        <div class="continue__btn">
                            <a href="/Home/Shop">Continue Shopping</a>
                        </div>
                    </div>
                   
                </div>
            </div>
            <div class="col-lg-4">
                <div class="cart__discount">
                    <h6>Discount codes</h6>
                    <form id="couponForm">
                        <input type="text" name="couponCode" placeholder="Coupon code">
                        <button type="button" onclick="applyCoupon()">Apply</button>
                    </form>

                    <p id="message" style="display:none;"></p>
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <p style="color: red;">@TempData["ErrorMessage"]</p>
                    }
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <p style="color: green;">@TempData["SuccessMessage"]</p>
                    }
                </div>

                <div class="cart__total">
                    <h6>Cart total</h6>
                    <ul>

                            <li>Total <span>$@((ViewBag.Total).ToString("0.00"))</span></li>

                        

                    </ul>
                    <a href="@Url.Action("CheackOut","Cart")" class="primary-btn">Proceed to checkout</a>
                </div>
            </div>

        </div>
    </div>
</section>

<script>
    function Calc() {
        var sumAllProduct = 0;
        const quantities = document.getElementsByClassName('qty');
        const prices = document.getElementsByClassName('prc');
        const eachPrice = document.getElementsByClassName('cart__price');

        if (quantities.length !== prices.length || prices.length !== eachPrice.length) {
            console.error("Mismatched lengths in elements!");
            return; // Stop execution if arrays do not match in length
        }

        for (var i = 0; i < quantities.length; i++) {
            let price = parseFloat(prices[i].innerText); // Parse the innerText to float
            let quantity = parseInt(quantities[i].value); // Parse the value to integer

            if (!isNaN(price) && !isNaN(quantity)) { // Check if both values are numbers
                let total = price * quantity;
                sumAllProduct += total;
                eachPrice[i].innerText = total.toFixed(2) + " $"; // Update each price
            }
        }

        document.getElementById('totalofsum').innerText = sumAllProduct.toFixed(2) + " $";
    }

    function applyCoupon() {
        var formData = $('#couponForm').serialize();  

        $.ajax({
            url: '@Url.Action("ApplyCoupon", "Cart")',  
            type: 'POST',
            data: formData,
            success: function (response) {
                
                if (response.success) {
                    Swal.fire({
                        icon: 'success',
                        title: 'Success',
                        text: response.message,
                    });
                } else {
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: response.message,
                    });
                }
            },
            error: function () {
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: 'There was a problem with the request.',
                });
            }
        });
    }

</script>
<!-- Shopping Cart Section End -->